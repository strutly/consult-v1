.advertise {
  display: inline-block;
}

.advertise .des {
  white-space: normal;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.footer-tips {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(50rpx + constant(safe-area-inset-bottom) / 2);  
  bottom: calc(50rpx + env(safe-area-inset-bottom) / 2);
}

.modal-box{
  position: fixed;
  bottom: 0;  
  left: 0;
  top: 0;
  right: 0;
  background-color: rgba(180,180,180,0.6);
  z-index:100;  
}
.modal-bg{
  min-height: 10vh;
}
.modal-content{
  background-color: #fff;
  overflow: hidden;
  border-radius: 5vw 5vw 0 0;
}