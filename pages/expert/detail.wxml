<view class="bg-white padding">
  <view class="card bg-white flex align-center padding-sm">
    <view class="head-box margin-right-sm">
      <image style="width: 200rpx;height: 200rpx;" src="{{expert.avatarUrl||'http://gridpic.tsing-tec.com/consult%2Fhome-head.png'}}"></image>
      <view class="name text-center">{{expert.name}}</view>
    </view>
    <view class="info-box">
      <view class="">擅长领域:{{expert.goodAt}}</view>
      <text class="" space="ensp">学 历:{{expert.education}}</text>
      <view class="">专家分级:{{expert.level}}</view>
      <view class="">技术关键词:{{expert.keyWord}}</view>
    </view>
  </view>
  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-titles text-yellow"></text> 个人介绍
    </view>
  </view>
  <view class="padding-lr bg-white">
    {{expert.introduce||'无'}}
  </view>
  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text> 上市经历
    </view>
  </view>
  <view class="padding-lr-xl bg-white ">
    {{expert.listingExperience||'无'}}
  </view>
  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-titles text-red"></text> 融资经历
    </view>
  </view>
  <view class="padding-lr-xl bg-white ">
    {{expert.financingExperience||'无'}}
  </view>

  <view bindtap="toUrl" data-url="/pages/appointment/form?id={{expert.uid}}" class="text-center margin-top-xl" wx:if="{{expert.auth}}">
    <view style="width:60%;" class='cu-btn bg-main shadow' >咨询</view>
  </view>
</view>